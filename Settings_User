                    <button type="button" class="cc-trigger" id="ccBtn" aria-haspopup="listbox" aria-expanded="false">
                      <span class="left"><span class="cc-flag" id="ccFlag">ðŸ‡²ðŸ‡½</span><span class="cc-code" id="ccText">+52</span></span>
                      <span class="cc-caret" aria-hidden="true"></span>
                    </button>
                    <ul class="cc-menu hidden" id="ccMenu" role="listbox">
                      <li class="cc-option active" data-cc="52" data-flag="ðŸ‡²ðŸ‡½" role="option" aria-selected="true">
                        <span class="label"><span class="cc-flag">ðŸ‡²ðŸ‡½</span><span>+52</span></span>
                        <span class="check">âœ“</span>
                      </li>
                      <li class="cc-option" data-cc="1" data-flag="ðŸ‡ºðŸ‡¸" role="option" aria-selected="false">
                        <span class="label"><span class="cc-flag">ðŸ‡ºðŸ‡¸</span><span>+1</span></span>
                        <span class="check">âœ“</span>
                      </li>
                    </ul>
                    <input type="hidden" id="cc" name="cc" value="52">
                  </div>
