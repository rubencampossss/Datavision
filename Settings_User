        </div>
        <div class="card-b">
          <div id="listRows"><!-- filas dinÃ¡micas --></div>
        </div>
      </section>

      <!-- ===== Vista DETALLE ===== -->
      <section class="card hidden" id="detailSection">
        <div class="card-h"><h2 class="card-title">Datos del usuario</h2></div>
        <div class="card-b">
          <div class="detail-row">
